<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="WindowBackground" TargetType="Window">
        <Setter Property="Background" Value="#444444"/>
    </Style>

    <!-- Menu -->
    <Brush x:Key="MenuColor">#333333</Brush>
    <Brush x:Key="MenuColor1">#333333</Brush>
    <Brush x:Key="MenuColor2">#333333</Brush>
    <Brush x:Key="fontColor">#ffffff</Brush>
    <Brush x:Key="fontColorFileMenu">#000000</Brush>
   
    <!-- IN, OUT, WR, IP Label Font color -->
    <Brush x:Key="programLabels">#FFFFFF</Brush>

    <!-- sliderFontColor-->
    <Brush x:Key="sliderFontColor">#FFFFFF</Brush>

    <!-- MEMORY ROW COLORS -->
    <Brush x:Key="rowNrColor">#FFFFFF</Brush>
    <Brush x:Key="BackgroundZeroColor">#222222</Brush>
    <Brush x:Key="BackgroundOneColor">#222222</Brush>
    <Brush x:Key="ForegroundZeroColor">#333333</Brush>
    <Brush x:Key="ForegroundOneColor">#33DD33</Brush>

    <!-- Message Box -->
    <Brush x:Key="MessageBoxBackground">#FFFFFF</Brush>
    
    <!-- Text Box -->
    <Brush x:Key="TextBoxBackground">#222222</Brush>
    <Brush x:Key="TextBoxForegroundOff">#33DD33</Brush>
    <Brush x:Key="TextBoxForegroundOn">#333333</Brush>

</ResourceDictionary>