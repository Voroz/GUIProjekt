<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="WindowBackground" TargetType="Window">
        <Setter Property="Background" Value="WhiteSmoke"/>
    </Style>

    <Brush x:Key="MenuColor">#DDDDE4</Brush> <!--Row #0-->
    <Brush x:Key="MenuColor1">#DDDDE4</Brush> <!--Row #1-->
    <Brush x:Key="MenuColor2">#DDDDE4</Brush>  <!--Row #2-->
    <Brush x:Key="fontColor">#000000</Brush>
    <Brush x:Key="fontColorFileMenu">#000000</Brush>
    <Brush x:Key="toggleClicked">#FFFFFF</Brush>
    <Brush x:Key="toggleFont">#000000</Brush>

    <!-- IN, OUT, WR, IP Label Font color -->
    <Brush x:Key="programLabels">#000000</Brush>

    <!-- MEMORY ROW COLORS -->
    <Brush x:Key="rowNrColor">#000000</Brush>
    <Brush x:Key="zeroColor">#028482</Brush>
    <Brush x:Key="oneColor">#80FF00</Brush>

</ResourceDictionary>