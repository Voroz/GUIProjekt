                    <TextBox Text="{Binding ElementName=Slider_Input, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                             DockPanel.Dock="Right"
                             TextAlignment="Right"
                             Width="40"
                             />
                    <Slider Name="Slider_Input"
                            Minimum="-2048"
                            Maximum="2047"
                            Value="0"
                            ToolTip="Increment / Decrement input"
                            TickPlacement="None"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"
