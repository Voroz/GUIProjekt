<Window x:Class="GUIProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modeldatorn Assembler" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="25px" MaxHeight="45px" /> <!-- Meny -->
            <RowDefinition Height="10*" />  <!-- Content -->
        </Grid.RowDefinitions>
        
        <Label>Meny</Label>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" />    <!-- Minne -->
                <ColumnDefinition Width="10*" />    <!-- Maskinkod -->
                <ColumnDefinition Width="10*" />    <!-- Assembler -->
            </Grid.ColumnDefinitions>
            
            <Label>Minne</Label>
            <Label Grid.Column="1">Maskinkod</Label>
            <Label Grid.Column="2">Assembler</Label>
        </Grid> 
    </Grid>
</Window>
