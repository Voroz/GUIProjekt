    <Window.Resources>
        <!-- Mall för menyknapparna -->
        <Style x:Key="MenuButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Viewbox>
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </Viewbox>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Bakgrundsfärg för hela menyområdet -->
        <Brush x:Key="MenuColor">#DDDDE4</Brush>
        <local:FontSizeConverter x:Key="fontSizeCon"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition MinHeight="25" MaxHeight="45" /> <!-- Meny -->
            <RowDefinition Height="10*" />  <!-- Content -->
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Width="Auto" Height="30" Background="{StaticResource MenuColor}" FontSize="16">   <!-- Topmeny/Standardmeny -->
            <MenuItem Header="_File">
                <MenuItem Name="Open" Header="Open" Click="Open_Click"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
            </MenuItem>
        </Menu>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Stretch" Background="{StaticResource MenuColor}">
            <Button Click="Button_Run_Click" Style="{StaticResource MenuButton}" ToolTip="Play">
                <Image Source="images/media-play-8x.png" />
            </Button>
            <Button Style="{StaticResource MenuButton}" ToolTip="Pause">
                <Image Source="images/media-pause-8x.png" />
            </Button>
            <Button Name="Button_Stop" Click="Button_Stop_Click" Style="{StaticResource MenuButton}" ToolTip="Stop">
                <Image Source="images/media-stop-8x.png" />
            </Button>
            <Button Style="{StaticResource MenuButton}" ToolTip="Step Forward">
                <Image Source="images/action-undo-8x.png" />
            </Button>
            <Button Style="{StaticResource MenuButton}" ToolTip="Step Back">
                <Image Source="images/action-redo-8x.png" />
                <ToolTipService.ToolTip>
                    <TextBlock Text="Step Back" />
                </ToolTipService.ToolTip>
            </Button>
            
            <Viewbox>
                <ToggleButton Name="PlayButton" Background="#DDDDE4" BorderBrush="#DDDDE4">
                    <Image Source="images/play-button.png" Height="9" Width="9" ToolTip="Play"></Image>
                </ToggleButton>
            </Viewbox>
            <Viewbox>
                <ToggleButton Name="PauseButton" Background="#DDDDE4" BorderBrush="#DDDDE4">
                    <Image Source="images/pause.png" Height="10" Width="10" ToolTip="Pause"></Image>
                </ToggleButton>
            </Viewbox>
            <Viewbox>
                <ToggleButton Name="StopButton" Background="#DDDDE4" BorderBrush="#DDDDE4">
                    <Image Source="images/Stopbtn.png" Height="10" Width="10" ToolTip="Stop"></Image>
                </ToggleButton>
            </Viewbox>
            
        </StackPanel>
        

