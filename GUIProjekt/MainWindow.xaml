<Window x:Class="GUIProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modelldatorn Assembler" Height="768" Width="1024">
    
    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Viewbox>
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </Viewbox>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Brush x:Key="MenuColor">#eeeeee</Brush>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition MinHeight="25" MaxHeight="45" /> <!-- Meny -->
            <RowDefinition Height="10*" />  <!-- Content -->
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Width="Auto" Height="20" Background="{StaticResource MenuColor}">   <!-- Topmeny/Standardmeny -->
            <MenuItem Header="_File">
                <MenuItem Header="Open"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
            </MenuItem>
        </Menu>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Stretch" Background="#eeeeee">
            <Button Click="Button_Run_Click" Style="{StaticResource MenuButton}">
                <Image Source="images/media-play-8x.png" />
                <ToolTipService.ToolTip>
                    <TextBlock Text="Play" />
                </ToolTipService.ToolTip>
            </Button>
            <Button Style="{StaticResource MenuButton}">
                <Image Source="images/media-pause-8x.png" />
                <ToolTipService.ToolTip>
                    <TextBlock Text="Pause" />
                </ToolTipService.ToolTip>
            </Button>
            <Button Name="StopBtn" Click="StopBtn_Click" Style="{StaticResource MenuButton}">
                <Image Source="images/media-stop-8x.png" />
                <ToolTipService.ToolTip>
                    <TextBlock Text="Stop" />
                </ToolTipService.ToolTip>
            </Button>
            <Button Style="{StaticResource MenuButton}">
                <Image Source="images/action-undo-8x.png" />
                <ToolTipService.ToolTip>
                    <TextBlock Text="Step Forward" />
                </ToolTipService.ToolTip>
            </Button>
            <Button Style="{StaticResource MenuButton}">
                <Image Source="images/action-redo-8x.png" />
                <ToolTipService.ToolTip>
                    <TextBlock Text="Step back" />
                </ToolTipService.ToolTip>
            </Button>
            
            <Viewbox>
                <ToggleButton Name="PlayButton" Background="Lavender" BorderBrush="LightBlue">
                    <Image Source="images/play-button.png" Height="9" Width="9" ToolTip="Play"></Image>
                </ToggleButton>
            </Viewbox>
            <Viewbox>
                <ToggleButton Name="PauseButton" Background="Lavender" BorderBrush="LightBlue">
                    <Image Source="images/pause.png" Height="10" Width="10" ToolTip="Pause"></Image>
                </ToggleButton>
            </Viewbox>
            <Viewbox>
                <ToggleButton Name="StopButton" Background="Lavender" BorderBrush="LightBlue">
                    <Image Source="images/Stopbtn.png" Height="10" Width="10" ToolTip="Stop"></Image>
                </ToggleButton>
            </Viewbox>
            
        </StackPanel>
        

        <Grid Grid.Row="2" Margin="0,35,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" /> 
                <ColumnDefinition Width="10*" /> 
                <ColumnDefinition Width="10*" /> 
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="0">
            </Viewbox>

            <!-- Maskinkod -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="90*"></RowDefinition>
                </Grid.RowDefinitions>
                
                <Viewbox Stretch="Uniform">
                    <Label Grid.Row="0" FontSize="30">Maskinkod</Label>
                </Viewbox>
               
                <TextBox
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Margin="2,0,2,0"
                    FontSize="14"
                    Height="Auto"
                    MinWidth="102"
                    MaxWidth="102"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Name="TextBox_MK"
                    TextChanged="TextBox_MK_TextChanged"
                />
            </Grid>


            <!-- Assembler -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="90*"></RowDefinition>
                </Grid.RowDefinitions>
                
                <Viewbox Stretch="Uniform">
                    <Label Grid.Row="0" FontSize="30">Assembler</Label>
                </Viewbox>             
                <TextBox
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Margin="2,0,2,0"
                    FontSize="14"
                    Height="Auto"
                    Width="300"
                    MinWidth="150"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Name="TextBox_Assembler"
                    TextChanged="TextBox_Assembler_TextChanged"
                />
            </Grid>            

        </Grid> 
    </Grid>
</Window>
