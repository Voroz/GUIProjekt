<Window x:Class="GUIProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modeldatorn Assembler" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition MinHeight="25" MaxHeight="45" /> <!-- Meny -->
            <RowDefinition Height="10*" />  <!-- Content -->
        </Grid.RowDefinitions>
        
        <Menu Width="Auto" Height="20">   <!-- Topmeny/Standardmeny -->
            <MenuItem Header="_File">
                <MenuItem Header="Open"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
            </MenuItem>
        </Menu>

        <Viewbox Grid.Row="1" HorizontalAlignment="Left">
            <Label>Menyn för att styra programmet</Label>   <!-- Meny -->
        </Viewbox>  
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" /> 
                <ColumnDefinition Width="10*" /> 
                <ColumnDefinition Width="10*" /> 
            </Grid.ColumnDefinitions>
            
            <Viewbox>
                <Label>Minne</Label>    <!-- Minne -->
            </Viewbox>

            <Viewbox Grid.Column="1">
                <Label>Maskinkod</Label>    <!-- Maskinkod -->
            </Viewbox>
            
            <Viewbox Grid.Column="2">
                <Label>Assembler</Label>    <!-- Assembler -->
            </Viewbox>
            
        </Grid> 
    </Grid>
</Window>
