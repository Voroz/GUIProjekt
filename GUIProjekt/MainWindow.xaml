<Window x:Class="GUIProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modelldatorn Assembler" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition MinHeight="25" MaxHeight="45" /> <!-- Meny -->
            <RowDefinition Height="10*" />  <!-- Content -->
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Width="Auto" Height="20">   <!-- Topmeny/Standardmeny -->
            <MenuItem Header="_File">
                <MenuItem Header="Open"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
            </MenuItem>
        </Menu>

        <Viewbox Grid.Row="1" HorizontalAlignment="Left">
            <Label>Menyn för att styra programmet</Label>   <!-- Meny -->
        </Viewbox>  
        
        <Grid Grid.Row="2" Margin="0,35,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" /> 
                <ColumnDefinition Width="10*" /> 
                <ColumnDefinition Width="10*" /> 
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="0">
                <Label>Minne</Label>    <!-- Minne -->
            </Viewbox>

            <!-- Maskinkod -->
            <TextBox
                Grid.Column="1"
                Margin="2,0,2,0"
                FontSize="14"
                Height="Auto"
                MinWidth="102"
                MaxWidth="102"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                />


            <TextBox 
                Grid.Column="2"
                Margin="2,0,2,0"
                FontSize="14"
                Height="Auto"
                MinWidth="150"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                />

        </Grid> 
    </Grid>
</Window>
