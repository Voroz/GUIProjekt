<Window x:Class="GUIProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modelldatorn Assembler" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition MinHeight="25" MaxHeight="45" /> <!-- Meny -->
            <RowDefinition Height="10*" />  <!-- Content -->
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Width="Auto" Height="20">   <!-- Topmeny/Standardmeny -->
            <MenuItem Header="_File">
                <MenuItem Header="Open"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
            </MenuItem>
        </Menu>

        <Viewbox Grid.Row="1" HorizontalAlignment="Left">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Menyn för att styra programmet</Label>   <!-- Meny -->
                <Button Grid.Column="1" Click="Button_Run_Click">Run(test)</Button>
            </Grid>
        </Viewbox>  
        
        <Grid Grid.Row="2" Margin="0,35,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" /> 
                <ColumnDefinition Width="10*" /> 
                <ColumnDefinition Width="10*" /> 
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="0">
                <Label>Minne</Label>    <!-- Minne -->
            </Viewbox>

            <!-- Maskinkod -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="90*"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" FontSize="30">Maskinkod</Label>
                <TextBox
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Margin="2,0,2,0"
                    FontSize="14"
                    Height="Auto"
                    MinWidth="102"
                    MaxWidth="102"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Name="TextBox_MK"
                    TextChanged="TextBox_MK_TextChanged"
                />
            </Grid>


            <!-- Assembler -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="90*"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" FontSize="30">Assembler</Label>
                <TextBox
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Margin="2,0,2,0"
                    FontSize="14"
                    Height="Auto"
                    Width="300"
                    MinWidth="150"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Name="TextBox_Assembler"
                    TextChanged="TextBox_Assembler_TextChanged"
                />
            </Grid>            

        </Grid> 
    </Grid>
</Window>
