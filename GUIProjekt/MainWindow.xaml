        <Grid Grid.Row="3" Margin="10,2,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" /> 
                <ColumnDefinition Width="2*" /> 
            </Grid.ColumnDefinitions>
            
            <!-- IP, IN, OUT, WR    START -->
            <Grid Grid.Column="0" Grid.Row="1" Margin="0, 0, 10, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
